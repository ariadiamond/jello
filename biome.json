{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**", "tests/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noNoninteractiveElementInteractions": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "error"
      },
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "operatorLinebreak": "before",
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": false,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
